	"item": [
		{
			"name": "Payments",
			"item": [
				{
					"name": "Create Payment - STRIPE (Happy Path)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has transaction number\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('transactionNo');",
									"});",
									"",
									"pm.test(\"Response has payment status\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('status');",
									"});",
									"",
									"pm.test(\"Response has idempotency key\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('idempotencyKey');",
									"});",
									"",
									"pm.test(\"Payment provider is STRIPE\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.paymentProvider).to.eql('STRIPE');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "X-API-Key",
								"value": "{{api_key}}",
								"type": "text"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$randomUUID}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"amount\": 100.50,\n    \"paymentMethod\": \"card\",\n    \"description\": \"Test payment via STRIPE\",\n    \"paymentProvider\": \"STRIPE\"\n}",
							"options": {
								"raw": {
