				{
					"name": "Create Payment - Idempotency Test",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has cached property\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('cached');",
									"});",
									"",
									"// Note: Run this request twice. First request: cached = false, Second request: cached = true",
									"var jsonData = pm.response.json();",
									"if (jsonData.cached === true) {",
									"    pm.test(\"Response is cached (idempotent) - This is the second request\", function () {",
									"        pm.expect(jsonData.cached).to.be.true;",
									"    });",
									"} else {",
									"    pm.test(\"Response is not cached - This is the first request. Run again to test idempotency\", function () {",
									"        pm.expect(jsonData.cached).to.be.false;",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Generate a fixed idempotency key for testing if not already set",
									"if (!pm.environment.get('test_idempotency_key')) {",
									"    // Generate a UUID-like string using timestamp and random number",
									"    var timestamp = Date.now();",
									"    var random = Math.floor(Math.random() * 1000000);",
									"    pm.environment.set('test_idempotency_key', 'test-idempotency-' + timestamp + '-' + random);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "X-API-Key",
								"value": "{{api_key}}",
								"type": "text"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{test_idempotency_key}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"amount\": 50.00,\n    \"paymentMethod\": \"card\",\n    \"description\": \"Idempotency test payment\",\n    \"paymentProvider\": \"STRIPE\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v1/payments",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"payments"
							]
						},
						"description": "Tests idempotency by sending the same request twice with the same idempotency key. The second request should return a cached response."
					},
					"response": []
				}
			],
			"description": "Payment creation endpoints"
		},
